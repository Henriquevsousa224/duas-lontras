    id="dialogo_leo"
    text="Léo diz: &quot;Precisamos ser rápidos! Vamos usar estes galhos grandes. Terminamos em um piscar de olhos!&quot;"
    color="black"
    font-size="20"
    x="100"
    y="80"
  />
