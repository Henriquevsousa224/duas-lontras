    y="420"
  />
  <agent
    id="escolha_mia"
    text="Seguir o plano de Mia (Segurança)"
    on_click="goToPage('finalfracassolento')"
    font-size="22"
    x="380"
    y="420"
  />
  <agent
    id="escolha_cooperar"
    text="Sugerir que combinem os planos"
