<fable>
  <page id="start">
    <agent
      id="background"
      image="represa_destruida.png"
      x="0"
      y="0"
      width="100%"
      height="100%"
    />
    <agent
      id="titulo"
      text="As Duas Lontras e a Represa"
      color="white"
      font-size="40"
      x="200"
      y="50"
    />
    <agent
      id="narrador_inicio"
      text="Uma forte chuva destruiu a represa que protegia a casa das lontras Léo e Mia. Agora, com outra tempestade se aproximando, elas precisam reconstruí-la urgentemente, mas não conseguem concordar em como fazer isso."
      color="white"
      font-size="24"
      x="100"
      y="150"
      width="700"
    />
    <agent
      id="botao_continuar"
      text="Ver os planos"
      on_click="goToPage('decisao')"
      font-size="28"
      animation="pulse"
      x="380"
      y="450"
    />
  </page>
</fable>